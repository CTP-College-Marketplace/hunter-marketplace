datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Int
  category    String
  condition   String    // e.g. "New", "Like New", "Used"
  imageUrl    String?   // Azure Blob URL
  campus      String    // e.g. "Hunter College"
  location    String?   // optional detailed location
  sellerId    String    // we'll hook this up to a User model later
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
